<h1><%= @attraction.name %></h1>

<%= form_for @attraction.rides.build do |f| %>
  <%= f.hidden_field :attraction_id %>

  <%= f.submit("Go on this ride") %>

<% end %>

<% if is_admin(current_user) %>
  <%= link_to "Edit Attraction", "/attractions/#{@attraction.id}/edit," method: :post %>
<% end %>

